# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here

# AI API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Webhook Security (Optional)
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# Domain Configuration (if using reverse proxy/domain)
DOMAIN=localhost
API_URL=http://localhost:8002
WS_URL=ws://localhost:8002/ws

# Authentication Security (REQUIRED for Phase 1)
JWT_SECRET=your_jwt_secret_key_here_32_characters_minimum
ENCRYPTION_KEY=your_base64_fernet_encryption_key_here_32_bytes
GITHUB_REDIRECT_URI=https://yourdomain.com/auth/callback

# GitHub OAuth Configuration (REQUIRED for Phase 1)
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Additional Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com